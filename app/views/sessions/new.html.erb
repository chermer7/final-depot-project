<h1>Sessions#new</h1>
<p>Find me in app/views/sessions/new.html.erb</p>
<div class="alert">
<% if flash[:alert] %>
<p id="notice"><%= flash[:alert] %></p>
<% end %>
</div>
<%= form_tag do %>
<legend>Please Log In</legend>
<div>
<%= label_tag :name, 'Name:' %>
<%= text_field_tag :name, params[:name], class:"w3-input w3-border" %>
</div>
<div>
<%= label_tag :password, 'Password:' %>
<%= password_field_tag :password, params[:password], class:"w3-input w3-border" %>
</div>
<div class="actions">
<%= submit_tag "Login", class:"w3-button w3-light-gray" %>
</div>
<% end %>
</div>
